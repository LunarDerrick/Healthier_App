<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0C869"
    tools:context=".RegisterFragment">

    <TextView
        android:id="@+id/whiterec"
        android:layout_width="355dp"
        android:layout_height="666dp"
        android:background="@drawable/white_rectangle_rounded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TVReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/register"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/whiterec"
        app:layout_constraintTop_toTopOf="@+id/whiterec" />

    <TextView
        android:id="@+id/TVFlavor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/inter"
        android:text="@string/register_flavor_text"
        android:textColor="#6F6E6E"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/whiterec"
        app:layout_constraintTop_toTopOf="@+id/whiterec" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="214dp"
        android:layout_height="147dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/register_image"
        app:layout_constraintEnd_toEndOf="@+id/whiterec"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/whiterec"
        app:layout_constraintTop_toTopOf="@+id/whiterec" />

    <TextView
        android:id="@+id/TVuserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter"
        android:text="@string/username"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/whiterec"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="275dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_lightyellow"
        android:drawableStart="@drawable/username_icon"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="@+id/whiterec"
        app:layout_constraintStart_toStartOf="@+id/whiterec"
        app:layout_constraintTop_toBottomOf="@+id/TVuserName"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/TVemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter"
        android:text="@string/email"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/whiterec"
        app:layout_constraintTop_toBottomOf="@+id/userName" />

    <EditText
        android:id="@+id/email"
        android:layout_width="275dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_lightyellow"
        android:drawableStart="@drawable/email_icon"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="@+id/whiterec"
        app:layout_constraintStart_toStartOf="@+id/whiterec"
        app:layout_constraintTop_toBottomOf="@+id/TVemail"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/TVPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter"
        android:text="@string/password"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/whiterec"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="275dp"
        android:layout_height="35dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_lightyellow"
        android:drawableStart="@drawable/lock_icon"
        android:drawableEnd="@drawable/not_visible_icon"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintStart_toStartOf="@+id/whiterec"
        app:layout_constraintTop_toBottomOf="@+id/TVPass"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/TVConfirmPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter"
        android:text="@string/confirm_password"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/whiterec"
        app:layout_constraintTop_toBottomOf="@+id/pass" />

    <EditText
        android:id="@+id/confirmpass"
        android:layout_width="275dp"
        android:layout_height="35dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_lightyellow"
        android:drawableStart="@drawable/lock_icon"
        android:drawableEnd="@drawable/not_visible_icon"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintStart_toStartOf="@+id/whiterec"
        app:layout_constraintTop_toBottomOf="@+id/TVConfirmPass"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/terms_textbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="558dp"
        android:layout_marginEnd="65dp"
        android:clickable="true"
        android:fontFamily="@font/inter"
        android:text="@string/terms"
        android:textColor="#33B6FF"
        app:layout_constraintEnd_toEndOf="@+id/whiterec"
        app:layout_constraintStart_toEndOf="@+id/AgreeBtn"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/RegBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="593dp"
        android:backgroundTint="#F0C869"
        android:letterSpacing="0"
        android:text="@string/register"
        android:textAllCaps="false"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/whiterec"
        app:layout_constraintStart_toStartOf="@+id/whiterec"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:fontFamily="@font/inter"
        android:text="@string/already_have"
        android:textColor="#33B6FF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/whiterec"
        app:layout_constraintStart_toStartOf="@+id/whiterec"
        app:layout_constraintTop_toBottomOf="@+id/RegBtn"
        tools:ignore="TouchTargetSizeCheck" />

    <RadioButton
        android:id="@+id/AgreeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="544dp"
        android:checked="true"
        android:fontFamily="@font/inter"
        android:text="Agree with"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.247"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>