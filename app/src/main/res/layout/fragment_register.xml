<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_register"
    android:background="#F0C869"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_register" >

    <TextView
        android:id="@+id/white_rectangle_rounded"
        android:layout_width="355dp"
        android:layout_height="666dp"
        android:background="@drawable/white_rectangle_rounded"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="214dp"
        android:layout_height="147dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/register_image"
        app:layout_constraintEnd_toEndOf="@+id/white_rectangle_rounded"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/white_rectangle_rounded"
        app:layout_constraintTop_toTopOf="@+id/white_rectangle_rounded" />

    <TextView
        android:id="@+id/username_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter"
        android:text="@string/username"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/white_rectangle_rounded"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/register"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/white_rectangle_rounded"
        app:layout_constraintTop_toTopOf="@+id/white_rectangle_rounded" />

    <TextView
        android:id="@+id/password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter"
        android:text="@string/password"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/white_rectangle_rounded"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

    <TextView
        android:id="@+id/password_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter"
        android:text="@string/confirm_password"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/white_rectangle_rounded"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword" />

    <TextView
        android:id="@+id/email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter"
        android:text="@string/email"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/white_rectangle_rounded"
        app:layout_constraintTop_toBottomOf="@+id/editTextUserName" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="275dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_lightyellow"
        android:drawableStart="@drawable/email_icon"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/white_rectangle_rounded"
        app:layout_constraintStart_toStartOf="@+id/white_rectangle_rounded"
        app:layout_constraintTop_toBottomOf="@+id/email_text"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/register_flavor_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/inter"
        android:text="@string/register_flavor_text"
        android:textColor="#6F6E6E"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/white_rectangle_rounded"
        app:layout_constraintTop_toTopOf="@+id/white_rectangle_rounded" />

    <EditText
        android:id="@+id/editTextUserName"
        android:layout_width="275dp"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_lightyellow"
        android:drawableStart="@drawable/username_icon"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/white_rectangle_rounded"
        app:layout_constraintStart_toStartOf="@+id/white_rectangle_rounded"
        app:layout_constraintTop_toBottomOf="@+id/username_text"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="275dp"
        android:layout_height="35dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_lightyellow"
        android:drawableStart="@drawable/lock_icon"
        android:drawableEnd="@drawable/hide_icon"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/white_rectangle_rounded"
        app:layout_constraintTop_toBottomOf="@+id/password_text"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/editTextConfirmtPassword"
        android:layout_width="275dp"
        android:layout_height="35dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_lightyellow"
        android:drawableStart="@drawable/lock_icon"
        android:drawableEnd="@drawable/hide_icon"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/white_rectangle_rounded"
        app:layout_constraintTop_toBottomOf="@+id/password_text2"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/agree_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter"
        android:text="@string/agree"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/white_rectangle_rounded"
        app:layout_constraintTop_toBottomOf="@+id/editTextConfirmtPassword" />

    <TextView
        android:id="@+id/terms_textbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:fontFamily="@font/inter"
        android:text="@string/terms"
        android:textColor="#33B6FF"
        app:layout_constraintEnd_toEndOf="@+id/white_rectangle_rounded"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintStart_toEndOf="@+id/agree_text"
        app:layout_constraintTop_toBottomOf="@+id/editTextConfirmtPassword"
        tools:ignore="TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/checked_img"
        android:layout_width="26dp"
        android:layout_height="29dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="17dp"
        android:src="@drawable/checked_icon"
        app:layout_constraintStart_toStartOf="@+id/white_rectangle_rounded"
        app:layout_constraintTop_toBottomOf="@+id/editTextConfirmtPassword" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#F0C869"
        android:text="@string/register"
        app:layout_constraintEnd_toEndOf="@+id/white_rectangle_rounded"
        app:layout_constraintStart_toStartOf="@+id/white_rectangle_rounded"
        app:layout_constraintTop_toBottomOf="@+id/agree_text" />

    <TextView
        android:id="@+id/already_have_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:clickable="true"
        android:fontFamily="@font/inter"
        android:text="@string/already_have"
        android:textColor="#33B6FF"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/white_rectangle_rounded"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/white_rectangle_rounded"
        app:layout_constraintTop_toBottomOf="@+id/register_btn"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>