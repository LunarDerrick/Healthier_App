<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ProfessionalHelpFinder">


    <!--    <ScrollView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content">-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C1ACE6">

        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FEFEFE"
            android:backgroundTint="#FEFEFE"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/BTFilterProHelpFinder"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="18dp"
            android:backgroundTint="#FFFFFF"
            android:drawableRight="@drawable/ic_baseline_filter_alt_24"
            android:text="Filter"
            android:textColor="#000000"
            app:cornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/surfaceView"
            app:layout_constraintStart_toEndOf="@+id/SVProHelpFinder"
            app:layout_constraintTop_toTopOf="@+id/surfaceView"
            app:strokeColor="#000000"
            app:strokeWidth="1dp" />

        <SearchView
            android:id="@+id/SVProHelpFinder"
            android:layout_width="265dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="#000000"
            android:backgroundTint="#BAB8B8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/CVProHelpFinder1"
            android:layout_width="350dp"
            android:layout_height="180dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/surfaceView">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/BTChat1"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="#9B66F8"
                    android:text="Chat"
                    app:cornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TVDescPro1" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/CVPro1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/IVPro1"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        tools:src="@drawable/pro_1" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/TVPro1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:drawableEnd="@drawable/ic_baseline_verified_24"


                    android:text="@string/TVPro1"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/CVPro1"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/TVDescPro1"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/TVDescPro1"
                    android:textStyle="italic"
                    app:layout_constraintStart_toEndOf="@+id/CVPro1"
                    app:layout_constraintTop_toBottomOf="@+id/TVPro1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/CVProHelpFinder2"
            android:layout_width="350dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CVProHelpFinder1">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/BTChat2"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="#9B66F8"
                    android:text="Chat"
                    android:textSize="14sp"
                    app:cornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TVDescPro2" />

                <TextView
                    android:id="@+id/TVDescPro2"
                    android:layout_width="180dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/TVDescPro2"
                    android:textStyle="italic"
                    app:layout_constraintStart_toEndOf="@+id/CVPro2"
                    app:layout_constraintTop_toBottomOf="@+id/TVPro2" />

                <TextView
                    android:id="@+id/TVPro2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:drawableEnd="@drawable/ic_baseline_verified_24"
                    android:text="@string/TVPro2"
                    android:textColor="#050505"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/CVPro2"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/CVPro2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/IVPro2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        tools:src="@drawable/pro_2" />

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/CVProHelpFinder3"
            android:layout_width="350dp"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CVProHelpFinder2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/BTChat3"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="#9B66F8"
                    android:text="Chat"
                    app:cornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/TVDescPro3" />

                <TextView
                    android:id="@+id/TVDescPro3"
                    android:layout_width="180dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/TVDescPro3"
                    android:textStyle="italic"
                    app:layout_constraintStart_toEndOf="@+id/CVPro3"
                    app:layout_constraintTop_toBottomOf="@+id/TVPro3" />

                <TextView
                    android:id="@+id/TVPro3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:drawableEnd="@drawable/ic_baseline_verified_24"
                    android:text="@string/TVPro3"
                    android:textColor="#050505"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/CVPro3"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/CVPro3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    app:cardCornerRadius="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/IVPro3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        tools:src="@drawable/pro_3" />
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--    </ScrollView>-->

</ScrollView>