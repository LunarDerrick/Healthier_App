<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CLCalculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculatorActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/TBCalculator"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#5465FF"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:title="BMI &amp; Macro Calculator"
        android:titleTextColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/FCVCalorie"
        android:name="wia2007.example.healthier_app.CalorieCalc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/BtnBMIMacro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TBCalculator"
        tools:layout="@layout/fragment_calorie" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/FCVBMIMacro"
        android:name="wia2007.example.healthier_app.BMIMacroCalc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/BtnBMIMacro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TBCalculator"
        tools:layout="@layout/fragment_bmi_macro" />

    <Button
        android:id="@+id/BtnBMIMacro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:onClick="BtnBMIMacroOnClick"
        android:layout_marginBottom="10dp"
        android:text="BMI &amp; Macro"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/BtnCalorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="BtnCalorieOnClick"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:text="Calorie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/BtnBMIMacro" />

</androidx.constraintlayout.widget.ConstraintLayout>